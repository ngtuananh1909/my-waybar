{
    "layer": "top",
    "position": "top",
    "margin-top": 8,
    "margin-left": 10,
    "margin-right": 10,
    "spacing": 6,

    // === Module Mapping ===
    "modules-left": [
        "hyprland/workspaces",
        "hyprland/submap",
        "hyprland/window",
        "group/music-visual"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "group/hardware",
        "tray",
        "battery",
        //"upower", 
        "group/mode"
    ],

    // === UI & System Modules ===
    "hyprland/workspaces": {
        "format": "{icon}",
        "on-click": "activate",
        "disable-scroll": true,
        "all-outputs": true,
        "persistent-workspaces": {
            "1": [], "2": [], "3": [], "4": [], "5": []
        },
        "format-icons": {
            "1": "ÔÑ†", "2": "Ôâ®", "3": "ÔÑ°", "4": "ÔÜº", "5": "ÔÅµ",
            "active": "ÔÜí",
            "urgent": "ÔÅ™",
            "default": "ÔÑë" /* Workspace 6 tr·ªü ƒëi s·∫Ω hi·ªán icon n√†y */
        },
        "sort-by-number": true
    },

    "hyprland/window": {
        "max-length": 20, /* Gi·∫£m t·ª´ 50 xu·ªëng 20 ƒë·ªÉ module ng·∫Øn l·∫°i */
        "separate-outputs": true,
        "rewrite": {
            "(.*) ‚Äî Mozilla Firefox": "Û∞àπ Firefox",
            "(.*) - Visual Studio Code": "Û∞®û Code",
            "(.*) - Kitty": "Ôíâ Terminal",
            "(.*) - Spotify.*": "ÔÜº Spotify",
            "(.*) - Discord": "Ôáø  Discord"
        }
    },
    "clock": {
        "format": "{:%a, %d. %b  %H:%M}",
        //"format-alt": "{:%H:%M}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{:%c}</small></tt>",
        "on-click": "gsimplecal"
    },

    "tray": {
        "icon-size": 21,
        "spacing": 10
    },

    // === Hardware Group ===
    "group/hardware": {
        "orientation": "horizontal",
        "modules": ["memory", "cpu", "disk"]
    },

    "memory": {
        "interval": 10,
        "format": "RAM: {used:0.1f}G ",
        "on-click-right": "kitty -e btop"
    },

    "cpu": {
        "interval": 10,
        "format": "/ CPU: {}% üóø / ",
        "on-click-right": "kitty -e btop"
    },

    "disk": {
        "interval": 30,
        "format": "{percentage_used}% Disk",
        "path": "/",
        "on-click-right": "kitty -e btop"
    },

    // === Power & Battery ===
    "battery": {
        "format": "{capacity}% {icon}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
        "on-click": "bash /home/tuananh/.config/waybar/Mode/power-cycle.sh",
        "on-click-right": "wlogout" 
    },

    // === Multimedia & Visualization ===
    "group/music-visual": {
        "orientation": "horizontal",
        "modules": [
            "custom/cava",
            "custom/music"
        ]
    },

    "custom/cava": {
        "exec": "bash /home/tuananh/.config/waybar/Mode/cava.sh",
        "format": "{}",
        /* S√≥ng nh·∫°c ch·ªâ xu·∫•t hi·ªán khi tr·∫°ng th√°i l√† Playing */
        "exec-if": "playerctl status 2>/dev/null | grep -q 'Playing'"
    },

    "custom/music": {
        "exec": "bash /home/tuananh/.config/waybar/Mode/music.sh",
        "interval": 2,
        "format": "üéµ {}",
        "on-click": "playerctl previous",
        "on-click-right": "playerctl next",
        "on-click-middle": "playerctl play-pause",
        "max-length": 20
    },

    // === Audio & Brightness Control ===
    "group/mode": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 300,
            "children-class": "not-memory",
            "transition-left-to-right": false
        },
        "modules": [
            "pulseaudio",
            "backlight"
        ]
    },

    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}Ôäî",
        "format-muted": "ÔÄ¶",
        "format-icons": {
            "default": ["ÔÄß", "ÔÄ®"]
        },
        "scroll-step": 1,
        "on-click": "pavucontrol",
        "ignored-sinks": ["Easy Effects Sink"]
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{percent}% {icon}",
        "format-icons": ["ÔÜÖ", "ÔÑë"]
    },
    "upower": {
        "show-icon": false,
        "hide-if-empty": true,
        "tooltip": true,
        "tooltip-spacing": 20
    }
}